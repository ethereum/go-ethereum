root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 150

[CHANGELOG.md]
indent_style = space
indent_size = 2
max_line_length = off

[README.md]
indent_style = off
indent_size = off
max_line_length = off

[*.json]
max_line_length = off

[Makefile]
max_line_length = off

[coverage*/**/*]
indent_style = off
indent_size = off
max_line_length = off
