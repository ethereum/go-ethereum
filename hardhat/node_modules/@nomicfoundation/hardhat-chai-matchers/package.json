    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "bignumber.js": "^9.0.2",
    "bn.js": "^5.1.0",
    "chai": "^4.2.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-mocha": "10.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "ethers": "^6.1.0",
    "get-port": "^5.1.1",
